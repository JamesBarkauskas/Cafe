@using Cafe_Web.Models.VM
@model ProductDeleteVM

@{
    ViewData["Title"] = "Delete Product";
}

<h2>Delete Product</h2>

<form asp-action="Delete" method="post">
    <input hidden asp-for="Product.Id" />
    <div class="form-group mb-3">
        <label asp-for="Product.Name" class="form-label"></label>
        <input disabled asp-for="Product.Name" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Product.Description" class="form-label"></label>
        <input disabled asp-for="Product.Description" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Product.Price" class="form-label"></label>
        <input disabled asp-for="Product.Price" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Product.Calories" class="form-label"></label>
        <input disabled asp-for="Product.Calories" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Product.CategoryId" class="form-label"></label>
        <select disabled asp-for="Product.CategoryId" asp-items="@Model.CategoryList" class="form-select">
            
        </select>
    </div>

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}