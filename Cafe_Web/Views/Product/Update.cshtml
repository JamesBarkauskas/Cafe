@using Cafe_Web.Models.VM
@model ProductUpdateVM

@{
    ViewData["Title"] = "Update Product";
}

<h2>Update Product</h2>
<div class="row">
    <div class="col-8">
        <form asp-action="Update" method="post" enctype="multipart/form-data">
            <input hidden asp-for="Product.Id" />
            <input hidden asp-for="Product.ImageUrl" />
            <div class="form-group mb-3">
                <label asp-for="Product.Name" class="form-label"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Product.Description" class="form-label"></label>
                <input asp-for="Product.Description" class="form-control" />
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Product.Price" class="form-label"></label>
                <input asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Product.Calories" class="form-label"></label>
                <input asp-for="Product.Calories" class="form-control" />
                <span asp-validation-for="Product.Calories" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Product.ImageUrl" class="form-label"></label>
                <input type="file" name="file" class="form-control" />
                <span asp-validation-for="Product.ImageUrl" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Product.CategoryId" class="form-label"></label>

                <select asp-for="Product.CategoryId" asp-items="@Model.CategoryList" class="form-select">
                    <option disabled selected>--Select Category--</option>
                </select>

                <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
    <div class="col-4 d-flex">
        @if (!string.IsNullOrEmpty(Model.Product.ImageUrl))
        {
            <img src="@Model.Product.ImageUrl" class="img-fluid rounded shadow" style="max-height: 250px;" />
        }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}