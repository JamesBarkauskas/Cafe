@model List<Category>

<div class="container p-4 border">

    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Categories</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="Category" asp-action="CreateCategory" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Create New Category</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        <a asp-controller="Category" asp-action="UpdateCategory" asp-route-villaId="@item.Id" class="btn btn-success"><i class="bi bi-pencil-square"></i> Update Category</a>
                        <a asp-controller="Category" asp-action="DeleteCategory" asp-route-villaId="@item.Id" class="btn btn-danger"><i class="bi bi-trash-fill"></i> Delete Category</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>